generator client {
  provider = "prisma-client-js"
  // Ship binaries for both glibc (Railway/Nixpacks) and musl (Dockerfile) runtimes
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  logoDataUrl String?
  accentColor String?
  accentColor2 String?
  crmMode   String   @default("B2B")
  crmDisplayCurrency String @default("USD")
  industry  String?
  contractSetup Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users   User[]
  clients Client[]
  tasks   Task[]
  invoices Invoice[]
  subscriptions Subscription[]
  pipelines Pipeline[]
  stages Stage[]
  deals Deal[]
  dealStageHistory DealStageHistory[]
  products Product[]
  dealItems DealItem[]
  userInvites UserInvite[]
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(MEMBER)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  deals  Deal[] @relation("DealOwner")
}

model Subscription {
  id               String             @id @default(uuid())
  tenantId          String
  customerTenantId  String             @unique
  customerName      String
  contactFirstName  String?
  contactLastName   String?
  contactEmail      String?
  plan              String             @default("TRIAL")
  seats             Int                @default(1)
  trialEndsAt       DateTime?
  status            SubscriptionStatus @default(ACTIVE)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model UserInvite {
  id              String       @id @default(uuid())
  tenantId        String
  email           String
  name            String?
  role            UserRole     @default(MEMBER)
  token           String       @unique
  status          InviteStatus @default(PENDING)
  invitedByUserId String?
  acceptedByUserId String?
  acceptedAt      DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, status])
  @@index([tenantId, email])
}

model Client {
  id        String   @id @default(uuid())
  firstName String?
  name      String
  function  String?
  companySector String?
  email     String?
  phone     String?
  company   String?
  website   String?
  address   String?
  taxId     String?
  notes     String?
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant @relation(fields: [tenantId], references: [id])
  tasks   Task[]
  invoices Invoice[]
  deals   Deal[]
}

model Task {
  id        String     @id @default(uuid())
  title     String
  status    TaskStatus @default(PENDING)
  dueDate   DateTime?
  timeSpentHours Decimal? @db.Decimal(8, 2)
  amount    Decimal?   @db.Decimal(12, 2)
  currency  String     @default("USD")
  tenantId  String
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  client Client @relation(fields: [clientId], references: [id])
}

model Invoice {
  id           String         @id @default(uuid())
  tenantId     String
  clientId     String?
  amount       Decimal        @db.Decimal(10, 2)
  currency     String         @default("USD")
  status       InvoiceStatus  @default(NEW)
  filePath     String
  issuedDate   DateTime?
  dueDate      DateTime?
  extractedRaw Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  tenant Tenant  @relation(fields: [tenantId], references: [id])
  client Client? @relation(fields: [clientId], references: [id])
}

model Pipeline {
  id        String   @id @default(uuid())
  name      String
  isDefault Boolean  @default(false)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  stages Stage[]
  deals  Deal[]
}

model Stage {
  id         String      @id @default(uuid())
  name       String
  position   Int
  probability Float      @default(0)
  status     StageStatus @default(OPEN)
  tenantId   String
  pipelineId String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  pipeline Pipeline @relation(fields: [pipelineId], references: [id])
  deals    Deal[]
  historyFrom DealStageHistory[] @relation("FromStage")
  historyTo   DealStageHistory[] @relation("ToStage")
}

model Deal {
  id               String   @id @default(uuid())
  title            String
  value            Decimal  @db.Decimal(12, 2)
  currency         String   @default("USD")
  expectedCloseDate DateTime?
  proposalFilePath String?
  clientId         String?
  ownerId          String?
  tenantId         String
  pipelineId       String
  stageId          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  client   Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  owner    User?    @relation("DealOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  pipeline Pipeline @relation(fields: [pipelineId], references: [id])
  stage    Stage    @relation(fields: [stageId], references: [id])
  history  DealStageHistory[]
  items    DealItem[]

  @@index([ownerId])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal? @db.Decimal(12, 2)
  currency    String   @default("USD")
  isActive    Boolean  @default(true)
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id])
  dealItems DealItem[]

  @@index([tenantId])
}

model DealItem {
  id        String   @id @default(uuid())
  tenantId  String
  dealId    String
  productId String
  quantity  Int      @default(1)
  unitPrice Decimal? @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id])
  deal    Deal    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([dealId, productId])
  @@index([tenantId])
  @@index([dealId])
  @@index([productId])
}

model DealStageHistory {
  id          String   @id @default(uuid())
  tenantId    String
  dealId      String
  fromStageId String?
  toStageId   String
  movedAt     DateTime @default(now())

  tenant   Tenant @relation(fields: [tenantId], references: [id])
  deal     Deal   @relation(fields: [dealId], references: [id])
  fromStage Stage? @relation("FromStage", fields: [fromStageId], references: [id])
  toStage   Stage  @relation("ToStage", fields: [toStageId], references: [id])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum InvoiceStatus {
  NEW
  PROCESSING
  READY
}

enum StageStatus {
  OPEN
  WON
  LOST
}
