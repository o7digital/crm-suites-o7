generator client {
  provider = "prisma-client-js"
  // Ship binaries for both glibc (Railway/Nixpacks) and musl (Dockerfile) runtimes
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users   User[]
  clients Client[]
  tasks   Task[]
  invoices Invoice[]
  pipelines Pipeline[]
  stages Stage[]
  deals Deal[]
  dealStageHistory DealStageHistory[]
  products Product[]
  dealItems DealItem[]
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(MEMBER)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  company   String?
  website   String?
  address   String?
  taxId     String?
  notes     String?
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant @relation(fields: [tenantId], references: [id])
  tasks   Task[]
  invoices Invoice[]
  deals   Deal[]
}

model Task {
  id        String     @id @default(uuid())
  title     String
  status    TaskStatus @default(PENDING)
  dueDate   DateTime?
  amount    Decimal?   @db.Decimal(12, 2)
  currency  String     @default("USD")
  tenantId  String
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  client Client @relation(fields: [clientId], references: [id])
}

model Invoice {
  id           String         @id @default(uuid())
  tenantId     String
  clientId     String?
  amount       Decimal        @db.Decimal(10, 2)
  currency     String         @default("USD")
  status       InvoiceStatus  @default(NEW)
  filePath     String
  issuedDate   DateTime?
  dueDate      DateTime?
  extractedRaw Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  tenant Tenant  @relation(fields: [tenantId], references: [id])
  client Client? @relation(fields: [clientId], references: [id])
}

model Pipeline {
  id        String   @id @default(uuid())
  name      String
  isDefault Boolean  @default(false)
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  stages Stage[]
  deals  Deal[]
}

model Stage {
  id         String      @id @default(uuid())
  name       String
  position   Int
  probability Float      @default(0)
  status     StageStatus @default(OPEN)
  tenantId   String
  pipelineId String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  pipeline Pipeline @relation(fields: [pipelineId], references: [id])
  deals    Deal[]
  historyFrom DealStageHistory[] @relation("FromStage")
  historyTo   DealStageHistory[] @relation("ToStage")
}

model Deal {
  id               String   @id @default(uuid())
  title            String
  value            Decimal  @db.Decimal(12, 2)
  currency         String   @default("USD")
  expectedCloseDate DateTime?
  clientId         String?
  tenantId         String
  pipelineId       String
  stageId          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  client   Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  pipeline Pipeline @relation(fields: [pipelineId], references: [id])
  stage    Stage    @relation(fields: [stageId], references: [id])
  history  DealStageHistory[]
  items    DealItem[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal? @db.Decimal(12, 2)
  currency    String   @default("USD")
  isActive    Boolean  @default(true)
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   Tenant    @relation(fields: [tenantId], references: [id])
  dealItems DealItem[]

  @@index([tenantId])
}

model DealItem {
  id        String   @id @default(uuid())
  tenantId  String
  dealId    String
  productId String
  quantity  Int      @default(1)
  unitPrice Decimal? @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant  @relation(fields: [tenantId], references: [id])
  deal    Deal    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([dealId, productId])
  @@index([tenantId])
  @@index([dealId])
  @@index([productId])
}

model DealStageHistory {
  id          String   @id @default(uuid())
  tenantId    String
  dealId      String
  fromStageId String?
  toStageId   String
  movedAt     DateTime @default(now())

  tenant   Tenant @relation(fields: [tenantId], references: [id])
  deal     Deal   @relation(fields: [dealId], references: [id])
  fromStage Stage? @relation("FromStage", fields: [fromStageId], references: [id])
  toStage   Stage  @relation("ToStage", fields: [toStageId], references: [id])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum InvoiceStatus {
  NEW
  PROCESSING
  READY
}

enum StageStatus {
  OPEN
  WON
  LOST
}
